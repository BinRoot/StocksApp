<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_friends_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip" >

            <TextView
                android:id="@+id/text_stock_portfolio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Friends" />

            <Button
                android:id="@+id/button_stock_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Add Friend" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_friends_bottom"
        android:layout_below="@id/linear_friends_top" >

        <LinearLayout
            android:id="@+id/relative_friends_tab"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_friends_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="myActivityClicked"
                android:text="Friends Activity" />

            <Button
                android:id="@+id/button_friends_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="myFriendsClicked"
                android:text="My Friends" />
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/linear_friends_textheader"
            android:layout_below="@id/relative_friends_tab"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_height="60dip">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Friends"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        
        <ListView
            android:id="@+id/list_friends_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_friends_tab"
            android:layout_above="@+id/linear_friends_bottom"
            android:visibility="visible" >
        </ListView>
        
        <ListView
            android:id="@+id/list_friends_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_friends_textheader"
            android:layout_above="@+id/linear_friends_bottom"
            android:visibility="gone" >
        </ListView>
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_friends_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="portfolioClicked"
            android:text="My Portfolio" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Friends" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discover" />
    </LinearLayout>

</RelativeLayout>